//
// Colors
//

$colors = {
  red     : red
  tomato  : tomato
  blue    : royalblue
  grey    : #eee
  darkGrey: #666
  black   : #333
  white   : white
}

$themes = {
  default: {
    primary : $colors.black
    accent  : $colors.red
    subtle  : $colors.grey
    contrast: $colors.white
  }

  brand: {
    primary : $colors.red
    contrast: $colors.white
  }

  inverted: {
    primary : $colors.black
    accent  : $colors.red
    subtle  : $colors.darkGrey
    contrast: $colors.white
  }
}

primary-color($t = 'default')
  return $themes[$t]primary

accent-color($t = 'default')
  return $themes[$t]accent

subtle-color($t = 'default')
  return $themes[$t]subtle

contrast-color($t = 'default')
  return $themes[$t]contrast

